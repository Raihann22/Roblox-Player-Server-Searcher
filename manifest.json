{
  "manifest_version": 3,
  "name": "Roblox Player Server Searcher",
  "description": "The world's best and safest Roblox Player Server Searcher! [ Give us a ‚≠ê on GitHub ]",
  "version": "3.0.0",
  "author": "Raihan",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "management"
  ],
  "host_permissions": [
    "https://*.roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.roblox.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/eula.css",
        "css/new-update.css"
      ]
    },
    {
      "matches": [
        "https://*.roblox.com/games/*",
        "https://*.roblox.com/*/games/*"
      ],
      "js": [
        "js/page-games.js"
      ],
      "css": [
        "css/search-layout.css",
        "css/joining.css",
        "css/player-in-other-game.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "resources/*"
      ],
      "matches": [
        "https://*.roblox.com/*"
      ]
    }
  ]
}
